{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**", 
        "!.next/cache/**", 
        "dist/**", 
        "build/**",
        ".wrangler/**",
        "*.tsbuildinfo"
      ],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "cf-typegen": {
      "cache": false
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}

